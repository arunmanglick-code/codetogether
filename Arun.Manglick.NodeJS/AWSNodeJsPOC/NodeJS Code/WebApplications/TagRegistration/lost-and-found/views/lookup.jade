extends layout

script.
  var TT = 1;
block content

  .menu
    ul.nav.nav-pills
      li
        a(href='/') Home
      li
        a(href='/tasks') Register
      li.active
        a(href="/lookup") Lookup
      li
        a(href="/dax") DAX
  br
  if (fulfilled !== 'true')
    form.form-horizontal#loginForm(action='/lookup', method='post')
      .input-group
        table.table
          tr.form-group.required
            td
              label.control-label Tag#:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            td
              input.form-control.input-normal(name='TAG', type='text', size='13', value= tag)
          if (tagFound === 'true')
            tr.form-group.required
              td
                label.control-label First Name:
              td
                input.form-control.input-normal(name='FNAME', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Last Name:
              td
                input.form-control(name='LNAME', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Address Line 1:
              td
                input.form-control(name='ADDRESS1', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Address Line 2:
              td
                input.form-control(name='ADDRESS2', type='text', size='13')
            tr.form-group.required
              td
                label.control-label City:
              td
                input.form-control(name='CITY', type='text', size='13')
            tr.form-group.required
              td
                label.control-label State:
              td
                input.form-control(name='STATE', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Country:
              td
                input.form-control(name='COUNTRY', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Phone:
              td
                input.form-control(name='PHONE', type='text', size='13')
            tr.form-group.required
              td
                label.control-label Email:
              td
                input.form-control(name='EMAIL', type='text', size='13')
      div
        span
          button#btnReset.btn.btn-primary(type='reset') Reset
        span &nbsp;
          button#btnSubmit.btn.btn-success(type='submit') Submit
  else
    div Please click #[a(href="/lookup") here] to lookup another TAG!
