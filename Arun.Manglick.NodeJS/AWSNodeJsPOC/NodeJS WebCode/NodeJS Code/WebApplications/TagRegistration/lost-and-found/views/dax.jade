extends layout

block content

  .menu
    ul.nav.nav-pills
      li
        a(href='/') Home
      li
        a(href='/tasks') Register Tag
      li
        a(href="/lookup") Report Tag
      li.active
        a(href="/dax") DAX
  br
  form.form-horizontal#loginForm(action='/dax', method='post')
    .input-group
      table.table
        tr.form-group.required
          td
            label.control-label Tag Name:
          td
            input#firstname.form-control(name='TAG', type='text', ,='', size='13', placeholder='Tag Name')
    div
    .input-group-button 
        table
          tr
            td
              button#btnReset.btn.btn-primary(type='reset') Reset
            td
              button#btnSubmit.btn.btn-success(type='submit') Complete Fulfillment
    .footer
          ul.fl
            li © 2016 Synechron. All Rights Reserved.            
            li.last  
          ul.fr
            li.last  
            li
              a.facebook(href='https://www.facebook.com/pages/Synechron-Technologies-Pvt-Ltd/231574240199910', title='Facebook', target='_blank')  
            li
              a.twitter(href='https://twitter.com/Synechron', title='Twitter', target='_blank')  
            li
              a.in(href='http://www.linkedin.com/company/synechron', title='Linkedin', target='_blank')  
            li.nomargin
              a.youtube(href='http://www.youtube.com/user/SynechronInc', title='Youtube', target='_blank')
  script.
      $(document).ready(function(){        
         $("#btnSubmit").removeAttr('disabled');
        $('input[type="text"]').keyup(function (){         
          if ($("input[name='TAG']").val())
          {
            $("#btnSubmit").removeAttr('disabled');           
          }
          else
          {
            $("#btnSubmit").attr('disabled', 'disabled');
          }            
        });
      });