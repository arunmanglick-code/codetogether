<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="HIBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="HIBehavior" name="HelloIndigo.Lab4.Fault.HelloIndigoService">
        <clear />
        <endpoint address="HelloIndigoService"
                  binding="wsHttpBinding" name="wsHttp"
                  contract="HelloIndigo.Lab4.Fault.IHelloIndigoService" />

        <endpoint binding="mexHttpBinding" name="mex" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/HelloIndigoFault" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>  
</configuration>