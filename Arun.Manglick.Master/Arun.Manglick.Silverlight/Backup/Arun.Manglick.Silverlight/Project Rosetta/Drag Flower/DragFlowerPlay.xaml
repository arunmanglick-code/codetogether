<UserControl x:Class="Arun.Manglick.Silverlight.DragFlowerPlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="400" Loaded="UserControl_Loaded">
   <Canvas x:Name="LayoutRoot">
        <Canvas.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#590701" Offset="0"/>
                <GradientStop Color="#2b0300" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <TextBlock Canvas.Left="10" Canvas.Top="10" Text="Rearrange the puzzle. The image panels are draggable with inertia..." Foreground="#FFFFFF"/>
    </Canvas>
</UserControl>
