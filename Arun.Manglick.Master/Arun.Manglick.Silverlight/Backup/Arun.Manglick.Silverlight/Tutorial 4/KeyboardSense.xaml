<UserControl x:Class="Arun.Manglick.Silverlight.KeyboardSense"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:MyControl="clr-namespace:Arun.Manglick.Silverlight"
    Width="500" Height="500">
    <!-- This code is based in large part on code written by
    Karen Corby, Silverlight Program Manager.  http://scorbs.com/work -->

    <StackPanel Background="White">
        <TextBlock Text="Home Address - To Test put focus in any textBox and press Ctrl + C or Ctrl + M" FontFamily="Verdana" FontSize="12" 
            HorizontalAlignment="Left" Margin="15,0,0,0"/>
        <MyControl:AddressUserControl x:Name="HomeAddress" />
         
        <TextBlock Text="Billing Address - To Test put focus in any textBox and press Ctrl + C or Ctrl + M" FontFamily="Verdana" FontSize="12" 
            HorizontalAlignment="Left" Margin="15,0,0,0"/>
        <MyControl:AddressUserControl x:Name="BillAddress" />
  </StackPanel>   
</UserControl>
