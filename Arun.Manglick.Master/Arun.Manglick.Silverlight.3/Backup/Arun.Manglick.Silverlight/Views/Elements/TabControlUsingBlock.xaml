<UserControl xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
             x:Class="Arun.Manglick.Silverlight.Views.Elements.TabControlUsingBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Arun.Manglick.Silverlight.Views.Elements"
             Width="400"
             Height="300">
    <Grid x:Name="LayoutRoot"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtName" Grid.Row="0" Margin="0,0,0,10"></TextBox>
        <local:TabBlock Grid.Row="1"></local:TabBlock>
    </Grid>
</UserControl>
